{
  "name": "web-app-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate web application using React and Koa with TypeScript and Babel support",
  "main": "index.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir lib --extensions \".ts,.tsx\" --source-maps inline"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsilenzio/web-app-boilerplate.git"
  },
  "author": "Taylor Silenzio",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsilenzio/web-app-boilerplate/issues"
  },
  "homepage": "https://github.com/tsilenzio/web-app-boilerplate#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "eslint": "^5.16.0",
    "typescript": "^3.4.1"
  }
}
